@model IEnumerable<PlataformaRio2C.Application.ViewModels.MailAppViewModel>

@{
    /**/

    //ViewBag.Title = Labels.Mail;
    ViewBag.Title = "Emails";
}

<div class="">
    <section class="panel .panel-lg">
        <header class="panel-heading clearfix">
            <h2 class=" pull-left">@ViewBag.Title</h2>

            <a href="@Url.Action("Create")" class="btn btn-sm btn-success pull-right">
                @Labels.RegisterNewExecutive
            </a>
        </header>
        <div class="wrap-table table-responsive">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th class="editExcludeTd"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>

                            <td>
                                @Html.ActionLink("Editar", "Edit", new { uid = item.Id }) |
                                <span>
                                    <a data-toggle="modal" href="#modalDelete" data-urltarget="@Url.Action("Delete", new { uid = item.Id})"> Excluir </a>
                                </span>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<div class="login-body" style="">

    <div class="container">
        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalDelete" class="modal fade" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title text-center">Atenção!</h4>
                    </div>

                    <div class="modal-body">
                        <p>Tem certeza que deseja excluir?</p>
                    </div>

                    <div class="modal-footer ">
                        <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                        <a href="#" id="btn-trigger-delete" class="btn btn-success button-confirm">Confirmar</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- modal -->
    </div>
</div>