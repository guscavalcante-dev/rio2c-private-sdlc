@model IEnumerable<PlataformaRio2C.Application.ViewModels.CollaboratorProducerItemListAppViewModel>

@{
    /**/

    ViewBag.Title = Labels.Executives;
}

@*<div ng-controller="CollaboratorProducerCtrl as vm" ng-init="vm.list('Name')">*@
<section class="panel panel-lg">
    <header class="panel-heading clearfix">
        <h2 class="pull-left">@ViewBag.Title</h2>
    </header>


    <div class="profile-info">

        <div class="count-list-results">
            &nbsp;
        </div>
        <div class="wrap-table table-responsive">
            <table class="table table-striped table-advance table-hover" id="ExecutiveCollaboratorProducer">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'name' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'name' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'email' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'email' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            Produtora
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'producerName' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'producerName' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            Aceitou o termo
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CreationDate)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'creationDate' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'creationDate' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th class="editExcludeTd"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</section>

@Html.Partial("_ModalDelete")