@model IEnumerable<Tuple<bool, CollaboratorItemListAppViewModel, string>>
@{
    ViewBag.Title = "Resultado do envio";
}


<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading clearfix">
            <h2 class=" pull-left">@ViewBag.Title</h2>
        </header>
    </section>
</div>

@if (Model.Any(e => e.Item1))
{
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading clearfix">
                <h2 class="pull-left">Enviados com sucesso para:</h2>
            </header>
            <div class="panel-body">
                <ul>
                    @foreach (var item in Model.Where(e => e.Item1))
                    {
                        <li>@item.Item2.Email</li>
                    }
                </ul>
            </div>
        </section>
    </div>
}


@if (Model.Any(e => !e.Item1))
{
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading clearfix">
                <h2 class="pull-left">Com erro ao enviar:</h2>
            </header>
            <div class="panel-body">
                <ul>
                    @foreach (var item in Model.Where(e => !e.Item1))
                    {
                        <li>@item.Item2.Email - @item.Item3</li>
                    }
                </ul>
            </div>
        </section>
    </div>
}



