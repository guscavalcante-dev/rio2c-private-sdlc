@model IEnumerable<UserAppViewModel>


@{
    ViewBag.Title = "Users";
}


<div>
    <section class="panel panel-lg">
        <header class="panel-heading clearfix">
            <h2 class="pull-left">@ViewBag.Title</h2>

            <a href="@Url.Action("Create")" class="btn btn-sm btn-success pull-right">
                + Cadastrar novo usuário administrativo
            </a>
        </header>

        <div class="count-list-results" ng-if="!vm.loadingList">
            @Html.Raw(String.Format(@Labels.ReturnedItems, @Model.Count()))
        </div>
        
        <div class="wrap-table table-responsive">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <th class="editExcludeTd"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>
                        <td>

                            @Html.ActionLink("Editar", "Edit", new { uid = item.Uid }) |


                            <span>
                                <a data-toggle="modal" href="#modalDelete" data-urltarget="@Url.Action("Delete", new { uid = item.Uid})"> Excluir </a>
                            </span>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </section>
</div>








<div class="login-body" style="">

    <div class="container">



        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalDelete" class="modal fade" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title text-center">Atenção!</h4>
                    </div>

                    <div class="modal-body">
                        <p>Tem certeza que deseja excluir?</p>
                    </div>

                    <div class="modal-footer ">
                        <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                        <a href="#" id="btn-trigger-delete" class="btn btn-success button-confirm">Confirmar</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- modal -->
        </form>

    </div>



    <!-- js placed at the end of the document so the pages load faster -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>




</div>