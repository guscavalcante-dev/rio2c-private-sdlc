@model IEnumerable<PlataformaRio2C.Application.ViewModels.LanguageAppViewModel>

@{
    ViewBag.Title = "Idiomas";
}

<div>
    <section class="panel panel-lg">
        <header class="panel-heading clearfix">
            <h2 class=" pull-left">@ViewBag.Title</h2>

        </header>
        <div class="wrap-table table-responsive">
            <div class="count-list-results" ng-if="!vm.loadingList">
                @Html.Raw(String.Format(@Labels.ReturnedItems, @Model.Count()))
            </div>

            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
                        <th class="editExcludeTd"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreationDate)</td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { uid = item.Uid })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
