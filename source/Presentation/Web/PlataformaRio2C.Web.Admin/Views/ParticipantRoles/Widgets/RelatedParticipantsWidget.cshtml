@using PlataformaRio2C.Domain.Dtos
@model ConferenceParticipantRoleDto
<div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">
            @(string.Format(Messages.RelatedEntities, Labels.Speakers))
        </h3>
    </div>
    @*<div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-actions">
                <button type="button" class="btn btn-clean btn-sm btn-icon btn-icon-md btn-circle" onclick="ConferencesTracksWidget.showUpdateModal();">
                    <i class="flaticon2-edit"></i>
                </button>
            </div>
        </div>*@
</div>
<div class="kt-portlet__body">
    <div class="row">
        @if (Model.ConferenceParticipantDtos?.Any() == true)
        {
            <div class="col-12">
                <table class="table table-sm table-head-bg-brand table-body-scroll">
                    <thead class="thead-inverse">
                        <tr>
                            <th>@Labels.Speaker</th>
                            <th>@Labels.Conference</th>
                        </tr>
                    </thead>
                    <tbody class="rio2c-scroll" style="height: 200px;">
                        @foreach (var conferenceParticipantDto in Model.ConferenceParticipantDtos)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Speakers", new { Area = "", id = conferenceParticipantDto.AttendeeCollaboratorDto.Collaborator.Uid })" target="_blank">
                                        @(conferenceParticipantDto.AttendeeCollaboratorDto.Collaborator.GetDisplayName())
                                    </a>
                                </td>
                                <td>@(conferenceParticipantDto.ConferenceDto.GetConferenceTitleDtoByLanguageCode(ViewBag.UserInterfaceLanguage)?.ConferenceTitle?.Value ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="col-12 text-center mt-30">@string.Format(Messages.EntityNotAction, Labels.Conferences, Labels.FoundFP)</div>
        }
    </div>
</div>