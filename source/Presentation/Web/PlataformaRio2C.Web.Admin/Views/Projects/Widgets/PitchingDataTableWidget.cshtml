@using PlataformaRio2C.Domain.Dtos
@{
    ViewBag.Title = Labels.ProjectsForPitching;
    var genreInterests = ViewBag.GenreInterests as List<InterestDto>;
}
<!--begin:: DataTable Widget-->
<div id="ProjectPitchingDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.ProjectsForPitching
            </h3>
        </div>
    </div>

    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-6">
                <label>@Labels.Search:</label>
                @Html.Hidden("Page", ViewBag.Page as int?)
                @Html.Hidden("PageSize", ViewBag.PageSize as int?)
                @Html.TextBox("Search", null, new { @class = "form-control mr-1", autocomplete = "off", type = "search", placeholder = $"{Labels.Title} {Labels.Or.ToLowerInvariant()} {Labels.Producer.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-4">
                <label>@Labels.Genre:</label>

                <select name="InterestUid" id="InterestUid" class="form-control enable-datatable-reload enable-select2">
                    <option value="">@(string.Format(Labels.SelectAMEntity, Labels.Genre.ToLowerInvariant()))...</option>
                    @foreach (var interestDto in genreInterests)
                    {
                        <option value="@interestDto.Interest.Uid" @(interestDto.Interest.Uid == ViewBag.InterestUid ? "selected" : string.Empty)>
                            @interestDto.Interest.Name.GetSeparatorTranslation(ViewBag.UserInterfaceLanguage as string, '|')
                        </option>
                    }
                </select>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="projectpitching-list-table">
            <thead>
                <tr>
                    <th>@Labels.Title</th>
                    <th>@Labels.Producer</th>
                    <th>@Labels.Genre</th>
                    <th class="dt-head-center dt-body-center">@Labels.CreateDate</th>
                    <th class="dt-head-center dt-body-center">@Labels.SendDate</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->
