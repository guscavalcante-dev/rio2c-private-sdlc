@model CollaboratorSearchViewModel
@{
    ViewBag.Title = Labels.ProjectsForPitching;
}
<!--begin:: Quick Stats-->
<div class="row">
    <div class="col-sm-6">
        <!--begin:: Total Count Widget-->
        <div id="ProjectsPitchingTotalCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Total Count Widget-->
    </div>
    <div class="col-sm-6">
        <!--begin:: Edition Count-->
        <div id="ProjectsPitchingEditionCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Edition Count-->
    </div>
</div>
@Html.Partial("Widgets/PitchingDataTablewidget")
@section Styles {
    @Styles.Render("~/bundles/css/select2.css")
    @Styles.Render("~/bundles/css/dataTables.css")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/dataTables.js")
    @Scripts.Render("~/bundles/js/chart.js")
    @Scripts.Render("~/bundles/js/bootbox.js")
    @Scripts.Render("~/bundles/js/select2.js")
    @Scripts.Render("~/bundles/js/projects.pitching.widget.js")
    @Scripts.Render("~/bundles/js/projects.pitching.editioncount.widget.js")
    <script>
        // Page translations ----------------------------------------------------------------------
        var translations = {
            downloadPdfs: '@Labels.DownloadPdfs',
            confirmDownloadAll: '@Labels.ConfirmDownloadAllProjects',
            confirmDownloadSelected: '@Labels.ConfirmDownloadSelectedProjects'
        };

        // Pagination -----------------------------------------------------------------------------
        var initialPage = @(ViewBag.Page?.ToString() ?? "null");
        var initialPageSize = @(ViewBag.PageSize?.ToString() ?? "null");

        jQuery(document).ready(function () {
            ProjectsPitchingDataTableWidget.init();
            ProjectsPitchingTotalCountWidget.init();
            ProjectsPitchingEditionCountWidget.init();
        });
    </script>
}