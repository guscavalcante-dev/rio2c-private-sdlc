@model PlataformaRio2C.Application.CQRS.Commands.OrganizationDescriptionBaseCommand
<div class="form-group row">
    <div class="col-lg-12">
        <div class="form-group">
            @Html.LabelFor(m => m.Value, $"{Labels.CompanyProfile} ({Model.LanguageCode.GetSplittedWord('-', 0).ToUpper()})", new { @class = "control-label" }) <span class="form-optional-input text-muted">@Labels.Optional</span>
            @Html.TextAreaFor(m => m.Value, new { @class = "form-control ckeditor-rio2c" })
            @Html.HiddenFor(m => m.LanguageCode)
            @Html.HiddenFor(m => m.LanguageName)
            @Html.HiddenFor(m => m.IsRequired)
            @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
        </div>
    </div>
</div>