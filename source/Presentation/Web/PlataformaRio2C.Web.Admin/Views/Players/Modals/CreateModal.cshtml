@model PlataformaRio2C.Application.CQRS.Commands.CreateHolding
<div class="modal fade" id="CreatePlayerModal" tabindex="-1" role="dialog" aria-labelledby="CreateHoldingModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Labels.NewHolding</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Players", new { Area = "" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "CreatePlayerForm" }))
                {
                    <div id="form-container">
                        @Html.Partial("Modals/_Form", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#CreatePlayerForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>