@model PlataformaRio2C.Application.CQRS.Commands.CreateTinyCollaborator
<div class="modal fade" id="CreateSpeakerModal" role="dialog" aria-labelledby="CreateSpeakerModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Labels.NewM @Labels.Speaker</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Speakers", new { Area = "" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateSpeakerForm" }))
                {
                    <div id="form-container">
                        @Html.Partial("/Views/Shared/Collaborators/Forms/_TinyForm.cshtml", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#CreateSpeakerForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>