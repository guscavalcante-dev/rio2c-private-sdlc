@model SpeakerSearchViewModel
<!--begin:: DataTable Widget-->
<div id="SpeakersDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Speakers
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button onclick="SpeakersCreate.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        @Labels.NewM @Labels.Speaker
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="row">
            <div class="col-12 col-lg-6 col-md-6">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.Name.ToLowerInvariant()}, {Labels.Email.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.Company.ToLowerInvariant()}" })
            </div>
            <div class="col-12 col-lg-6 col-md-6">
                @Html.LabelFor(m => m.RoomsUids, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.RoomsUids, new SelectList(Model.Rooms, "Uid", "Name", Model.RoomsUids), null, new { @class = "form-control enable-select2", @multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.RoomsUids, "", new { @class = "text-danger" })
            </div>
        </div>
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-12 mt-3">
                <div class="kt-checkbox-inline">
                    <label class="kt-checkbox">
                        @Html.CheckBoxFor(m => m.ShowAllEditions, new { @class = "enable-datatable-reload" }) @Labels.ShowAllEditions
                        <span></span>
                    </label>
                    <label class="kt-checkbox">
                        @Html.CheckBoxFor(m => m.ShowAllParticipants, new { @class = "enable-datatable-reload" }) @Labels.ShowAllParticipants
                        <span></span>
                    </label>
                    <label class="kt-checkbox">
                        @Html.CheckBoxFor(m => m.ShowHighlights, new { @class = "enable-datatable-reload" }) @Labels.ShowHighlights
                        <span></span>
                    </label>
                    <label class="kt-checkbox mt-2">
                        @Html.CheckBoxFor(m => m.ShowNotPublishableToApi, new { @class = "enable-datatable-reload" }) @Labels.ShowNotPublishableToApi
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="speakers-list-table">
            <thead>
                <tr>
                    <th class="text-left">@Labels.Name</th>
                    <th>@Labels.Email</th>
                    <th>@Labels.UpdateDate</th>
                    <th>@Labels.Date @Messages.ImageAuthorizationForm.ToLowerInvariant()</th>
                    <th>@Labels.OnboardingFinishDate</th>
                    <th>@Labels.Publishable</th>
                    <th>@Labels.Api</th>
                    <th class="dt-head-center dt-body-center">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->

<style>
    .select2-search__field {
        width: 100% !important;
    }
</style>