@model int
<div class="kt-portlet__body kt-portlet__body--fluid">
    <div class="kt-widget20">
        <div class="kt-widget20__content kt-portlet__space-x">
            <span class="kt-widget20__number kt-font-danger">@Model</span>
            <span class="kt-widget20__desc">
                <a href="@Url.Action("Index", "Speakers", new { Area = "" })">@Labels.Speakers</a>
                @Labels.InEditionYear.Replace("{0}", ViewBag.EditionDto.UrlCode.ToString())
            </span>
        </div>
        <div class="kt-widget20__chart" style="height:130px;">
            <canvas id="SpeakersEditionCountChart"></canvas>
        </div>
    </div>
</div>