@model IEnumerable<PlataformaRio2C.Application.ViewModels.LogisticsItemListAppViewModel>

@{
    ViewBag.Title = "Lista Logística";
}

@*<div ng-controller="LogisticsList as vm">*@
    <section class="panel panel-lg">
        <header class="panel-heading clearfix">
            <h2 class="pull-left">@ViewBag.Title</h2>

            <a href="@Url.Action("Create")" class="btn btn-sm btn-success pull-right">
                + Cadastrar nova logística
            </a>
        </header>
        <div class="wrap-table table-responsive">
            <table class="table table-striped table-advance table-hover" id="TableLogistics">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Collaborator)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'Collaborator' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'Collaborator' && vm.orderByDesc === true)}"></span>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArrivalDate)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'ArrivalDate' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'ArrivalDate' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ArrivalTime)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'ArrivalTime' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'ArrivalTime' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.DepartureDate)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'DepartureDate' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'DepartureDate' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.DepartureTime)
                            <span class="" ng-class="{'icon-sort-up' : (vm.orderBy === 'DepartureTime' && vm.orderByDesc === false), 'icon-sort-down' : (vm.orderBy == 'DepartureTime' && vm.orderByDesc === true)}"></span>
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="logistic in vm.listLogistics track by $index">
                        <td>{{logistic.collaborator}}</td>
                        <td>{{logistic.arrivalDate | date: 'dd/MM/yyyy'}}</td>
                        <td>{{logistic.arrivalTimeText}}</td>
                        <td>{{logistic.departureDate | date: 'dd/MM/yyyy'}}</td>
                        <td>{{logistic.departureTimeText}}</td>
                        <td>
                            <a href="@Url.Action("Edit")?uid={{logistic.uid}}"> Editar</a> |
                            <span>
                                <a data-toggle="modal" href="#modalDelete" data-urltarget="@Url.Action("Delete")?uid={{logistic.uid}}"> Excluir </a>
                            </span>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>



<!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modalDelete" class="modal fade" style="display: none;">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title text-center">Atenção!</h4>
            </div>

            <div class="modal-body">
                <p>Tem certeza que deseja excluir?</p>
            </div>

            <div class="modal-footer ">
                <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                <a href="#" id="btn-trigger-delete" class="btn btn-success button-confirm">Confirmar</a>
            </div>
        </div>
    </div>
</div>
<!-- modal -->
