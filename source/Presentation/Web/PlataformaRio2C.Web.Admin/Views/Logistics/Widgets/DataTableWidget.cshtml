@model LogisticRequestSearchViewModel
<!--begin:: DataTable Widget-->
<div id="LogisticRequestsDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Requests
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">                   
                    <button onclick="LogisticsCreate.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        @Labels.NewF @Labels.Request
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-5">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.Name.ToLowerInvariant()}, {Labels.Email.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.Company.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-7">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="kt-checkbox-inline">
                        <label class="kt-checkbox">
                            @Html.CheckBoxFor(m => m.ShowAllParticipants, new { @class = "enable-datatable-reload" }) @Labels.ShowAllParticipants
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="logisticsponsors-list-table">
            <thead>
                <tr>
                    <th class="text-left">@Labels.Name</th>
                    <th class="text-left">@Labels.Airfare</th>
                    <th class="text-left">@Labels.Accommodation</th>
                    <th class="text-left">@Labels.LogisticsTransfer</th>
                    <th class="text-left">@Labels.TransferCity</th>
                    <th class="text-left">@Labels.VehicleAtDisposal</th>
                    <th>@Labels.CreateDate</th>
                    <th>@Labels.UpdateDate</th>
                    <th class="dt-head-center dt-body-center">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->