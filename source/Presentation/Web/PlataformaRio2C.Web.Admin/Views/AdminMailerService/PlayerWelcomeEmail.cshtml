@model PlataformaRio2C.Application.CQRS.Commands.SendPlayerWelcomeEmailAsync
@using PlataformaRio2C.Domain.Entities;
@{
    var defaultFontColor = "#F2388F";
    var onboardingFinalDatePt = "";
    var onboardingFinalDateEn = "";

    if (Model.CollaboratorTypeUid == CollaboratorType.PlayerExecutiveAudiovisual.Uid)
    {
        onboardingFinalDatePt = "24 de janeiro de 2025";
        onboardingFinalDateEn = "January 24th, 2025";
    }
    else if (Model.CollaboratorTypeUid == CollaboratorType.PlayerExecutiveMusic.Uid)
    {
        onboardingFinalDatePt = "7 de Fevereiro de 2024";
        onboardingFinalDateEn = "February 7th, 2024";
    }
    else if (Model.CollaboratorTypeUid == CollaboratorType.PlayerExecutiveInnovation.Uid)
    {
        onboardingFinalDatePt = "7 de Fevereiro de 2024";
        onboardingFinalDateEn = "February 7th, 2024";
    }
}
<td valign="top">
    <!-- content -->
    <h1>
        <span>@Model.RecipientFirstName,</span><br />
        <span style="font-style: italic; color: @defaultFontColor;">Dear @Model.RecipientFirstName,</span>
    </h1>
    <p>
        Bem-vindo(a) ao Rio2C @Model.Edition.UrlCode / <span style="font-style: italic; color: @defaultFontColor;">Welcome to Rio2C @Model.Edition.UrlCode</span>
    </p>
    <p>
        <span>
            Para confirmar sua participação como player é necessário acessar a plataforma MyRio2C para realizar a sua inscrição e de sua empresa até o dia <b>@onboardingFinalDatePt</b>.
            Clique no botão abaixo e utilize o mesmo endereço deste e-mail para iniciar seu login.
        </span><br />
        <span style="font-style: italic; color: @defaultFontColor;">
            For the confirmation of your participation as a player, it is required that you access MyRio2C’s platform to register yourself and your company for the One-to-One Meetings by <b>@onboardingFinalDateEn</b>.
            Please click on the button below and use this same email address to login.
        </span>
    </p>
    <div style="margin-top: 25px; margin-bottom: 25px;">
        <!--Button:begin-->
        <table cellpadding="0" cellspacing="0" border="0" width="100%">
            <tr>
                <td align="center">
                    <table cellpadding="0" cellspacing="0" width="250" border="0" style="border-collapse: separate !important;">
                        <tr>
                            <td style="background-color: @defaultFontColor; color: #FFFFFF; font-family: sans-serif; font-size: 16px; font-weight: bold; padding: 10px 10px; border-radius: 10px; text-align: center;">
                                <a href="@($"{ViewBag.SiteUrl}/account/onboarding?culture={Model.UserInterfaceLanguage}&edition={Model.Edition.UrlCode}&email={Url.Encode(Model.RecipientEmail)}&uid={Model.RecipientUserUid}&token={Model.UserSecurityToken}")" style="color:#FFFFFF;text-decoration:none;">Clique Aqui / Click here</a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <!--Button:end-->
    </div>
    <p>
        <span>
            Qualquer dúvida entre em contato através do email: meetings@rio2c.com.
        </span><br />
        <span style="font-style: italic; color: @defaultFontColor;">
            If you have any questions do not hesitate to get in touch at: meetings@rio2c.com.
        </span>
    </p>
    <p>
        Venha fazer parte do Rio2C! / <span style="font-style: italic; color: @defaultFontColor;">Come and join us at Rio2C!</span>
    </p>
    <p>
        <span>Sua oportunidade de viver dias incríveis de aprendizado, negócios, networking e experiências inovadoras.</span><br />
        <span style="font-style: italic; color: @defaultFontColor;">This is your chance to experience days filled with great content, doing business, networking and sharing innovative experiences.</span>
    </p>
</td>
@section Styles {
}