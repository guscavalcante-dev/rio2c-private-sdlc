@using Mvc.Mailer
@model PlataformaRio2C.Application.CQRS.Commands.SendForgotPasswordEmailAsync
<td valign="top">
    <!-- content -->
    <h1 style="text-align: center">
        <span>@Labels.ResetYourPassword</span>
    </h1>
    <p>
        <span>@Texts.ForgotPasswordEmail1</span>
    </p>
    <div style="margin-top: 25px; margin-bottom: 25px;">
        <!--Button:begin-->
        <table cellpadding="0" cellspacing="0" border="0" width="100%">
            <tr>
                <td align="center">
                    <table cellpadding="0" cellspacing="0" width="250" border="0" style="border-collapse: separate !important;">
                        <tr>
                            <td style="background-color:#EA202C;color:#FFFFFF;font-family:sans-serif;font-size:16px;font-weight:bold;padding:10px 10px;border-radius:10px;text-align:center;">
                                <a href="@Url.Abs(Url.Action("ResetPassword", "Account", new { culture = Model.UserInterfaceLanguage, edition = Model.Edition.UrlCode, token = Model.PasswordResetToken }))" style="color: #FFFFFF; text-decoration: none;">
                                    @Labels.ChooseNewPassword →
                                </a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <!--Button:end-->
    </div>
    <p>
        <span>@Texts.ForgotPasswordEmail2</span>
    </p>
</td>
@section Styles {
}