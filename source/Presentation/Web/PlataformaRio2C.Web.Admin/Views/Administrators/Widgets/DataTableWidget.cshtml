@model AdministratorSearchViewModel
<!--begin:: DataTable Widget-->
<div id="AdministratorsDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Administrators
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button onclick="AdministratorsCreate.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        @Labels.NewM @Labels.Administrator
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="row">
            <div class="form-group col-lg-6">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.Name.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.Email.ToLowerInvariant()}" })
            </div>
            <div class="form-group col-lg-3">
                <label>@Labels.Role:</label>
                @Html.DropDownList("Role", new SelectList(Model.Roles, "Name", "Description", ViewBag.Role), $"{string.Format(Labels.SelectAFEntity, Labels.Role.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
            <div class="form-group col-lg-3">
                <label>@Labels.CollaboratorType:</label>
                @Html.DropDownList("CollaboratorType", new SelectList(Model.CollaboratorTypes, "Name", "Description", ViewBag.CollaboratorType), $"{string.Format(Labels.SelectAMEntity, Labels.CollaboratorType.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-lg-12">
                <div class="kt-checkbox-inline">
                    <label class="kt-checkbox">
                        @Html.CheckBoxFor(m => m.ShowAllEditions, new { @class = "enable-datatable-reload" }) @Labels.ShowAllEditions
                        <span></span>
                    </label>
                    <label class="kt-checkbox">
                        @Html.CheckBoxFor(m => m.ShowAllParticipants, new { @class = "enable-datatable-reload" }) @Labels.ShowAllParticipants
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="administrators-list-table">
            <thead>
                <tr>
                    <th class="text-left">@Labels.Name</th>
                    <th>@Labels.Email</th>
                    <th>@Labels.Profile</th>
                    <th>@Labels.CreateDate</th>
                    <th>@Labels.UpdateDate</th>
                    <th class="dt-head-center dt-body-center">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->