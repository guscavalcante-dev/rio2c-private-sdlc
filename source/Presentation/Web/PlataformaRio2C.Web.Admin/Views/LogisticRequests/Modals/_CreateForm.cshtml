@using PlataformaRio2C.Domain.Dtos
@model PlataformaRio2C.Application.CQRS.Commands.CreateLogisticRequest
@{
    var editionDto = ViewBag.EditionDto as EditionDto;
}
<div class="kt-section">
    <div class="kt-section__content mt-3">
        <div class="row">
            <div class="col-md-8">
                @Html.LabelFor(m => m.AttendeeCollaboratorId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.AttendeeCollaboratorId, Enumerable.Empty<SelectListItem>(), $"{Labels.Select}...", new { @class = "form-control enable-collaborator-select2" })
            </div>
        </div>
    </div>
</div>

<!--begin: Main Information-->
<div class="kt-section">
    <h3 class="kt-section__title mb-0 mt-30">@Labels.Airfare</h3>
    <hr />
    <div class="kt-section__content mt-3">
        <div class="kt-checkbox-list">
            <div class="row">
                <div class="col-md-12">
                    <label class="kt-checkbox">
                        <input type="checkbox"
                               name="IsAirfareTicketRequired"
                               value="true"
                               checked /> Necessita
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="kt-radio-list mt-2">
            <label class="kt-radio">
                <input type="radio" name="AirfareAttendeeLogisticSponsorId"> Rio2C
                <span></span>
            </label>
            <label class="kt-radio">
                <input type="radio" name="AirfareAttendeeLogisticSponsorId"> APEX
                <span></span>
            </label>
            <label class="kt-radio">
                <input type="radio" name="AirfareAttendeeLogisticSponsorId"> Próprio
                <span></span>
            </label>
            <label class="kt-radio">
                <input type="radio" name="AirfareAttendeeLogisticSponsorId" checked> Patrocinado por outras instituições
                <span></span>
            </label>
        </div>
        <div class="row">
            <div class="form-group col-md-8 mb-0" data-id="City">
                <div class="view">
                    @Html.Hidden("InitialCityUid", Model.AirportTransferAttendeeLogisticSponsorUid)
                    @Html.DropDownList("CityUid", Enumerable.Empty<SelectListItem>(), $"{Labels.Select}...", new { @class = "form-control enable-select2" })
                    <span class="form-text text-muted text-right"><a href="" onclick="return AddressesForm.enableNewCity();" class="btn-link btn-edit">@(Labels.NewM.ToLowerInvariant()) @(Labels.Sponsor.ToLowerInvariant())</a></span>
                </div>
                <div class="edit d-none">
                    @Html.TextBoxFor(m => m.AirportTransferAttendeeLogisticSponsorOthers, new { @class = "form-control" })
                    <span class="form-text text-muted text-right"><a href="" onclick="return AddressesForm.disableNewCity();" class="btn-link">@(Labels.Cancel.ToLowerInvariant())</a></span>
                </div>
                @Html.ValidationMessageFor(m => m.AirportTransferAttendeeLogisticSponsorOthers, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>

