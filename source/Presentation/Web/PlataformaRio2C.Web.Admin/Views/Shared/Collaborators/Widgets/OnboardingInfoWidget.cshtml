@using PlataformaRio2C.Domain.Dtos
@using PlataformaRio2C.Domain.Entities;
@model AttendeeCollaboratorOnboardingInfoWidgetDto
<div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">
            @Labels.Onboarding
        </h3>
    </div>
</div>
<div class="kt-portlet__body pt-0">
    <div class="row">
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.Start</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var startDate = Model.AttendeeCollaborator.OnboardingStartDate?.ToBrazilTimeZone();
                    }
                    @if (startDate.HasValue)
                    {
                        @(startDate?.ToShortDateString() + " " + startDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.End</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var finishDate = Model.AttendeeCollaborator.OnboardingFinishDate?.ToBrazilTimeZone();
                    }
                    @if (finishDate.HasValue)
                    {
                        @(finishDate?.ToShortDateString() + " " + finishDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.AccessData</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var userDate = Model.AttendeeCollaborator.OnboardingUserDate?.ToBrazilTimeZone();
                    }
                    @if (userDate.HasValue)
                    {
                        @(userDate?.ToShortDateString() + " " + userDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.PersonalInformation</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var collaboratorDate = Model.AttendeeCollaborator.OnboardingCollaboratorDate?.ToBrazilTimeZone();
                    }
                    @if (collaboratorDate.HasValue)
                    {
                        @(collaboratorDate?.ToShortDateString() + " " + collaboratorDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.WelcomeEmail</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var welcomeEmailDate = Model.AttendeeCollaborator.WelcomeEmailSendDate?.ToBrazilTimeZone();
                    }
                    @if (welcomeEmailDate.HasValue)
                    {
                        @(welcomeEmailDate?.ToShortDateString() + " " + welcomeEmailDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-20">
            <h3 class="kt-heading kt-heading--sm mb-0 mt-0">@Labels.TermsAcceptance</h3>
            <div class="row mt-3">
                <div class="col-12">
                    @{
                        var termsAcceptanceDate = ViewBag.CollaboratorTypeUid == CollaboratorType.ExecutiveAudiovisual.Uid ? Model.AttendeeCollaborator?.PlayerTermsAcceptanceDate?.ToBrazilTimeZone() :
                                                  ViewBag.CollaboratorTypeUid == CollaboratorType.Industry.Uid ? Model.AttendeeCollaborator?.AudiovisualProducerBusinessRoundTermsAcceptanceDate?.ToBrazilTimeZone() :
                                                  ViewBag.CollaboratorTypeUid == CollaboratorType.Speaker.Uid ? Model.AttendeeCollaborator?.SpeakerTermsAcceptanceDate?.ToBrazilTimeZone() :
                                                  Model.AttendeeCollaboratorTypeDto?.AttendeeCollaboratorType?.TermsAcceptanceDate?.ToBrazilTimeZone();
                    }
                    @if (termsAcceptanceDate.HasValue)
                    {
                        @(termsAcceptanceDate?.ToShortDateString() + " " + termsAcceptanceDate?.ToShortTimeString())
                    }
                    else
                    {
                        @:-
                    }
                </div>
            </div>
        </div>
    </div>
</div>