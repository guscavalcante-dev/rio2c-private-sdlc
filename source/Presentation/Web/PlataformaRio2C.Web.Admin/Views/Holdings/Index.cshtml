@{
    ViewBag.Title = Labels.Holdings;
}
<!--begin:: Quick Stats-->
<div class="row">
    <div class="col-sm-6">
        @Html.Partial("Widgets/TotalCountWidget")
    </div>
    <div class="col-sm-6">
        @Html.Partial("Widgets/EditionCountWidget")
    </div>
</div>
<!--end:: Quick Stats-->
@Html.Partial("Widgets/DataTablewidget")
@*
    @Html.Partial("../Shared/_ModalDelete")
*@
@section Styles {
    @Styles.Render("~/bundles/css/dataTablesBundle")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/dataTablesBundle")
    @Scripts.Render("~/bundles/js/chartJsBundle")
    @Scripts.Render("~/bundles/js/holdingsListBundle")
    <script>
        jQuery(document).ready(function () {
            HoldingsTotalCountWidget.init('@Url.Action("Count", "Holdings", new { Area = "" })');
            HoldingsEditionCountWidget.init('@Url.Action("Count", "Holdings", new { Area = "" })');
            HoldingsDataTableWidget.init('@Url.Action("Search", "Holdings", new { Area = "" })');
        });
    </script>
}