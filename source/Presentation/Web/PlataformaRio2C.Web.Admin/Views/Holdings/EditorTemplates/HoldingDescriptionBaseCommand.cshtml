@model PlataformaRio2C.Application.CQRS.Commands.HoldingDescriptionBaseCommand
<div class="form-group row">
    <div class="col-lg-12">
        <div class="form-group">
            @*<label class="control-label">@Model.LanguagesDtos.ElementAt(i).Name</label> <span class="form-optional-input text-muted">@Labels.Optional</span>*@
            @Html.LabelFor(m => m.Value, Model.LanguageName, new { @class = "control-label" }) <span class="form -optional-input text-muted">@Labels.Optional</span>
            @Html.TextAreaFor(m => m.Value, new { @class = "form-control ckeditor-rio2c" })
