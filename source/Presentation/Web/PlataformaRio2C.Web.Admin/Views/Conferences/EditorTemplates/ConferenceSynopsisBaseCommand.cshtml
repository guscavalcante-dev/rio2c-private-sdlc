@model PlataformaRio2C.Application.CQRS.Commands.ConferenceSynopsisBaseCommand
<div class="form-group row">
    <div class="col-lg-12">
        @Html.LabelFor(m => m.Value, $"{Labels.Synopsis} ({Model.LanguageCode.GetSplittedWord('-', 0).ToUpper()})", new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Value, new { @class = "form-control", rows = 5 })
        @Html.HiddenFor(m => m.LanguageCode)
        @Html.HiddenFor(m => m.LanguageName)
        @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
    </div>
</div>