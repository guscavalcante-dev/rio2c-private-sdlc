@model PlataformaRio2C.Application.CQRS.Commands.CreateEdition
<div class="modal fade" id="CreateEditionModal" role="dialog" aria-labelledby="CreateEditionModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Labels.NewM @Labels.Edition</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Editions", new { Area = "" }, FormMethod.Post, new { id = "CreateEditionForm" }))
                {
                    <div id="form-container">
                        @Html.Partial("Modals/_CreateForm", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#CreateEditionForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>