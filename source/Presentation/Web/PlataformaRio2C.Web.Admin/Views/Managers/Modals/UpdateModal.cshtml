@model PlataformaRio2C.Application.CQRS.Commands.UpdateManager
<div class="modal fade" id="UpdateManagerModal" role="dialog" aria-labelledby="UpdateManagerModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @if (!Model.IsAddingToCurrentEdition)
                    {
                        @(Labels.Update + " " + Labels.Manager)
                    }
                    else
                    {
                        @(Labels.NewM + " " + Labels.Manager + " " + string.Format(Labels.InEditionYear, ViewBag.EditionDto?.UrlCode))
                    }
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Update", "Managers", new { Area = "" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "UpdateManagerForm" }))
                {
                    @Html.HiddenFor(m => m.CollaboratorUid)
                    @Html.HiddenFor(m => m.IsAddingToCurrentEdition)
                    <div id="form-container">
                        @Html.Partial("Modals/_Form", Model)
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            @Labels.LastUpdateOn <b>@Model.UpdateDate.ToBrazilTimeZone().ToShortDateString() @Model.UpdateDate.ToBrazilTimeZone().ToLongTimeString()</b> @Labels.By <b>@Model.UpdaterBaseDto.Name</b>.
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#UpdateManagerForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>