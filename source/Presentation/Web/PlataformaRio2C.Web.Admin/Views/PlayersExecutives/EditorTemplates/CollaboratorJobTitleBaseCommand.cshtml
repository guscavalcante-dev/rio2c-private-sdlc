@model PlataformaRio2C.Application.CQRS.Commands.CollaboratorJobTitleBaseCommand
<div class="form-group row">
    <div class="col-lg-12">
        @Html.LabelFor(m => m.Value, $"{Labels.JobTitle} ({Model.LanguageCode.GetSplittedWord('-', 0).ToUpper()})", new { @class = "control-label" }) <span class="form-optional-input text-muted">@Labels.Optional</span>
        @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
        @Html.HiddenFor(m => m.LanguageCode)
        @Html.HiddenFor(m => m.LanguageName)
        @Html.HiddenFor(m => m.IsRequired)
        @Html.ValidationMessageFor(m => m.Value, null, new { @class = "text-danger" })
    </div>
</div>