@model LogisticSponsorSearchViewModel
@{
    ViewBag.Title = Labels.Sponsors;
}
<!--begin:: Quick Stats-->
<div class="row">
    <div class="col-sm-6">
        <!--begin:: Total Count Widget-->
        <div id="LogisticSponsorsTotalCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Total Count Widget-->
    </div>
    <div class="col-sm-6">
        <!--begin:: Edition Count-->
        <div id="LogisticSponsorsEditionCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Edition Count-->
    </div>
</div>
<!--end:: Quick Stats-->
@Html.Partial("Widgets/DataTablewidget", Model)
@section Styles {
    @Styles.Render("~/bundles/css/dataTables.css")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/dataTables.js")
    @Scripts.Render("~/bundles/js/chart.js")
    @Scripts.Render("~/bundles/js/bootbox.js")
    @Scripts.Render("~/bundles/js/logisticsponsors.list.js")
    @Scripts.Render("~/bundles/js/logisticsponsors.editioncount.js")
    @Scripts.Render("~/bundles/js/logisticsponsors.create.js")
    @Scripts.Render("~/bundles/js/logisticsponsors.delete.js")
    <script>
        // Page translations ----------------------------------------------------------------------
        var addToEdition = '@string.Format(Labels.AddToEdition, ViewBag.EditionDto.UrlCode)';
        var removeFromEdition = '@string.Format(Labels.RemoveFromEdition, ViewBag.EditionDto.UrlCode)';

        var translate = {
            main: '@Labels.Main',
            others: '@Labels.Others'
        };

        // Pagination -----------------------------------------------------------------------------
        var initialPage = @(Model.Page?.ToString() ?? "null");
        var initialPageSize = @(Model.PageSize?.ToString() ?? "null");

        jQuery(document).ready(function () {
            LogisticSponsorsTotalCountWidget.init();
            LogisticSponsorsEditionCountWidget.init();
            LogisticSponsorsDataTableWidget.init();
        });
    </script>
}