@model PlataformaRio2C.Application.CQRS.Commands.UpdateLogisticAirfare
<div class="modal fade" id="UpdateLogisticAirfareModal" role="dialog" aria-labelledby="UpdateLogisticAirfareModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(Labels.Update + " " + Labels.Airfare)
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UpdateAirfare", "Requests", new { Area = "Logistics" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "UpdateLogisticAirfareForm" }))
                {
                    @Html.HiddenFor(m => m.LogisticAirfareUid)                    
                    <div id="form-container">
                        @Html.Partial("Modals/_AirfareForm", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#UpdateLogisticAirfareForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>