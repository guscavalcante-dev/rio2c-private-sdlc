@model PlataformaRio2C.Application.CQRS.Commands.CreateLogisticAccommodation
<div class="modal fade" id="CreateLogisticAccommodationModal" role="dialog" aria-labelledby="CreateLogisticAccommodationModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(Labels.Create + " " + Labels.Accommodation)
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateAccommodation", "Requests", new { Area = "Logistics" }, FormMethod.Post, new { id = "CreateLogisticAccommodationForm" }))
                {               
                    <div id="form-container">
                        @Html.Partial("Modals/_AccommodationForm", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#CreateLogisticAccommodationForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>