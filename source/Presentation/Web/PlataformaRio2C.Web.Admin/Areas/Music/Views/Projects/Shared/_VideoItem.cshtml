@model string
@{
    var video = Model;
}
@if (!string.IsNullOrEmpty(video))
{
    if (video?.IsYoutubeVideo() == true || video?.IsVimeoVideo() == true || video?.IsFacebookVideo() == true)
    {
        <div class="row mt-3 justify-content-center">
            <div class="col-sm-8 col-md-8 col-lg-6">
                <div class="embed-responsive embed-responsive-16by9 d-flex">
                    @Html.Raw(video.ConvertVideoToEmbed())
                </div>
            </div>
        </div>
    }
    <div class="row mt-2">
        <div class="col-12 text-center">
            <span><a href="@video" target="_blank"><small class="text-break">@video</small></a></span>
        </div>
    </div>
}
else
{
    <div class="row mt-3">
        <div class="col-12 text-center">
            <span class="text-center">@string.Format(Messages.EntityNotAction, @Labels.VideoClip, Labels.FoundM)</span>
        </div>
    </div>
}