@{
    ViewBag.Title = Labels.Music;
}
<!--begin:: DataTable Widget-->
<div id="MusicProjectDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Projects

            </h3>

        </div>

        <div class="kt-portlet__head-label">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                    
                    <span>Exportar para Excel</span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a href="javascript:;" class="dropdown-item" onclick="MusicProjectsDataTableWidget.exportExcelReportByProject()">
                        <span class="kt-nav__link-text">Relatório por Projeto</span>
                    </a>
                    <a href="javascript:;" class="dropdown-item" onclick="MusicProjectsDataTableWidget.exportExcelReportByEvaluators()">
                        <span class="kt-nav__link-text">Relatório por Jurado</span>
                    </a>
                </div>
            </div>
        </div>

    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-6">
                <label>@Labels.Search:</label>
                @Html.Hidden("Page", ViewBag.Page as int?)
                @Html.Hidden("PageSize", ViewBag.PageSize as int?)
                @Html.TextBox("Search", null, new { @class = "form-control mr-1", autocomplete = "off", type = "search", placeholder = $"{Labels.MusicBand}, {Labels.BandType.ToLowerInvariant()}, {Labels.MusicGenre.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.TargetAudience.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-3">
                <label>@Labels.MusicGenre:</label>
                @Html.DropDownList("MusicGenreUid", new SelectList(ViewBag.MusicGenres, "Uid", "Name", ViewBag.MusicGenreUid), $"{string.Format(Labels.SelectAMEntity, Labels.MusicGenre.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
            <div class="col-lg-3">
                <label>@Labels.Status:</label>
                @Html.DropDownList("EvaluationStatusUid", new SelectList(ViewBag.ProjectEvaluationStatuses, "Uid", "Name", ViewBag.EvaluationStatusUid), $"{string.Format(Labels.SelectAMEntity, Labels.Status.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="musicprojects-list-table">
            <thead>
                <tr>
                    <th class="col-md-2">@Labels.MusicBand</th>
                    <th class="col-md-2">@Labels.BandType</th>
                    <th class="col-md-2">@Labels.MusicGenre</th>
                    <th class="col-md-2">@Labels.TargetAudience</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Evaluation</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.CreateDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.UpdateDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->
