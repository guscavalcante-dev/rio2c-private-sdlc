@model PlataformaRio2C.Application.CQRS.Commands.UpdateNegotiationRoomConfig
<div class="modal fade" id="UpdateRoomModal" role="dialog" aria-labelledby="UpdateRoomModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Labels.NewM @Labels.Parameter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UpdateRoom", "MeetingParameters", new { Area = "Music" }, FormMethod.Post, new { id = "UpdateRoomForm" }))
                {
                    @Html.HiddenFor(m => m.NegotiationConfigUid)
                    @Html.HiddenFor(m => m.NegotiationRoomConfigUid)
                    <div id="form-container">
                        @Html.Partial("Modals/UpdateRoomForm", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#UpdateRoomForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>