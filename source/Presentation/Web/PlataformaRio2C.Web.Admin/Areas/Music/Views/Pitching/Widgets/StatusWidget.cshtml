@using PlataformaRio2C.Domain.Dtos
@model MusicPitchingStatusWidgetDto
@{
    var editionDto = ViewBag.EditionDto as EditionDto;
}
<div class="kt-portlet__body pl-5 pr-5">
    <div class="row">
        <div class="col-sm-8 mt-2 pt-3">
            &nbsp;
        </div>
        <div class="col-sm-4 mt-2 mb-3 text-sm-right">
            @if (!editionDto.IsMusicPitchingComissionEvaluationOpen() || Model.HasDistributedMembers)
            {
                <button class="btn btn-brand btn-elevate btn-icon-sm" disabled>
                    <i class="flaticon-refresh"></i>@Labels.DistributeCommissionMembers
                </button>
            }
            else
            {
                <button onclick="MusicPitchingStatusWidget.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                    <i class="flaticon-refresh"></i>@Labels.DistributeCommissionMembers
                </button>
            }
        </div>
    </div>
    @if (Model.HasDistributedMembers)
    {
        <div class="row">
            <div class="form-group col-md-12">
                <div class="alert alert-info mb-0">
                    <div class="alert-icon"><i class="flaticon2-information"></i></div>
                    <div class="alert-text">
                        @Html.Raw(string.Format(Messages.CommisionMemberDistributionMessage))
                    </div>
                </div>
            </div>
        </div>
    }
</div>
