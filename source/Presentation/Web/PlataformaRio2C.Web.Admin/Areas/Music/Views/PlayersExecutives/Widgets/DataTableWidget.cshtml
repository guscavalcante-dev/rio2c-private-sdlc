@model CollaboratorSearchViewModel
<!--begin:: DataTable Widget-->
<div id="PlayersExecutivesDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Executives
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar d-flex align-content-end">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @*<button class="dropdown btn btn-outline-brand btn-elevate btn-icon-sm dropdown-toggle" style="min-width:143px" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span> @Labels.ExportToExcel</span>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a href="javascript:;" class="dropdown-item" onclick="MusicPlayersExecutivesDataTableWidget.exportPlayersExecutivesReportToExcel()">
                                <span class="kt-nav__link-text">@Labels.PlayersExecutivesReport</span>
                            </a>
                        </div>
                    </button>*@
                    <button onclick="MusicPlayersExecutivesCreate.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        @Labels.NewM @Labels.Executive
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-5">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.ExecutiveName.ToLowerInvariant()}, {Labels.Email.ToLowerInvariant()}, {Labels.PlayerName.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.HoldingName.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-7">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="kt-checkbox-inline">
                        <label class="kt-checkbox">
                            @Html.CheckBoxFor(m => m.ShowAllEditions, new { @class = "enable-datatable-reload" }) @Labels.ShowAllEditions
                            <span></span>
                        </label>
                        <label class="kt-checkbox">
                            @Html.CheckBoxFor(m => m.ShowAllParticipants, new { @class = "enable-datatable-reload" }) @Labels.ShowAllParticipants
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="playersexecutives-list-table">
            <thead>
                <tr>
                    <th class="text-left">@Labels.Name</th>
                    <th>@Labels.Email</th>
                    <th>@Labels.Players</th>
                    <th>@Labels.CreateDate</th>
                    <th>@Labels.WelcomeEmail</th>
                    <th class="dt-head-center dt-body-center">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->