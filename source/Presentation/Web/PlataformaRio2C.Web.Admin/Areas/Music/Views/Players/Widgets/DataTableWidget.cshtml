@model PlayerCompanySearchViewModel
<!--begin:: DataTable Widget-->
<div id="MusicPlayersDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Players
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button class="dropdown btn btn-outline-brand btn-elevate btn-icon-sm dropdown-toggle" style="min-width:143px" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span> @Labels.ExportToExcel</span>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a href="javascript:;" class="dropdown-item" onclick="MusicPlayersDataTableWidget.exportToExcel()">
                                <span class="kt-nav__link-text">@Labels.PlayersReport</span>
                            </a>
                        </div>
                    </button>
                    <button onclick="MusicPlayersCreate.showModal();" class="btn btn-brand btn-elevate btn-icon-sm">
                        <i class="la la-plus"></i>
                        @Labels.NewM @Labels.Player
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-6">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.PlayerName.ToLowerInvariant()}, {Labels.HoldingName.ToLowerInvariant()} {Labels.Or.ToLowerInvariant()} {Labels.CompanyDocument.ToLowerInvariant()}" })
                @*<span class="form-text text-muted">Please enter your full name</span>*@
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="kt-checkbox-list">
                        <label class="kt-checkbox mt-2">
                            @Html.CheckBoxFor(m => m.ShowAllEditions, new { @class = "enable-datatable-reload" }) @Labels.ShowAllEditions
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="kt-checkbox-list">
                        <label class="kt-checkbox mt-2">
                            @Html.CheckBoxFor(m => m.ShowAllOrganizations, new { @class = "enable-datatable-reload" }) @Labels.ShowAllCompanies
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="musicplayers-list-table">
            <thead>
                <tr>
                    <th class="text-left">@Labels.Name</th>
                    <th>@Labels.CompanyDocument</th>
                    <th>@Labels.Website</th>
                    <th>@Labels.CreateDate</th>
                    <th>@Labels.UpdateDate</th>
                    <th>@Labels.Api</th>
                    <th class="dt-head-center dt-body-center">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->