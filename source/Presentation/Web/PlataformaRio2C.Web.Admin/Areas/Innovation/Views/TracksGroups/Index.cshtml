@model InnovationTrackGroupSearchViewModel
@{
    ViewBag.Title = Labels.InnovationVerticals;
}
<!--begin:: Quick Stats-->
<div class="row">
    <!--begin:: Total Count Widget-->
    <div class="col-sm-6">
        <div id="InnovationTracksGroupsTotalCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
    </div>
    <!--end:: Total Count Widget-->
    <!--begin:: Edition Count-->
    <div class="col-sm-6">
        <div id="InnovationTracksGroupsEditionCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
    </div>
    <!--end:: Edition Count-->
</div>
<!--end:: Quick Stats-->
@Html.Partial("Widgets/DataTablewidget", Model)
@section Styles {
    @Styles.Render("~/bundles/css/dataTables.css")
    @Styles.Render("~/bundles/css/select2.css")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/dataTables.js")
    @Scripts.Render("~/bundles/js/chart.js")
    @Scripts.Render("~/bundles/js/select2.js")
    @Scripts.Render("~/bundles/js/bootbox.js")
    @Scripts.Render("~/bundles/js/innovation.tracks.groups.list.js")
    @Scripts.Render("~/bundles/js/innovation.tracks.groups.editioncount.js")
    @Scripts.Render("~/bundles/js/innovation.tracks.groups.create.js")
    @Scripts.Render("~/bundles/js/innovation.tracks.groups.update.js")
    @Scripts.Render("~/bundles/js/innovation.tracks.groups.delete.js")
    <script>
        // Page translations ----------------------------------------------------------------------
        var addToEdition = '@string.Format(Labels.AddToEdition, ViewBag.EditionDto.UrlCode)';
        var removeFromEdition = '@string.Format(Labels.RemoveFromEdition, ViewBag.EditionDto.UrlCode)';
        var theFieldIsRequired = '@Messages.TheFieldIsRequired';

        // Pagination -----------------------------------------------------------------------------
        var initialPage = @(Model.Page?.ToString() ?? "null");
        var initialPageSize = @(Model.PageSize?.ToString() ?? "null");

        jQuery(document).ready(function () {
            InnovationTracksGroupsTotalCountWidget.init();
            InnovationTracksGroupsEditionCountWidget.init();
            InnovationTracksGroupsDataTableWidget.init();
        });
    </script>
}