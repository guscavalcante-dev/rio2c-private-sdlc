@model InnovationProjectSearchViewModel
@{
    ViewBag.Title = Labels.Innovation;
}
<!--begin:: DataTable Widget-->
<div id="InnovationProjectDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Projects
            </h3>
        </div>

        <div class="kt-portlet__head-label">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span>@Labels.ExportToExcel</span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a href="javascript:;" class="dropdown-item" onclick="InnovationProjectsDataTableWidget.exportExcelReportByProject()">
                        <span class="kt-nav__link-text">@Labels.ReportByProject</span>
                    </a>
                    <a href="javascript:;" class="dropdown-item" onclick="InnovationProjectsDataTableWidget.exportExcelReportByEvaluators()">
                        <span class="kt-nav__link-text">@Labels.ReportByEvaluator</span>
                    </a>
                </div>
            </div>
        </div>

    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            @Html.HiddenFor(m => m.Page)
            @Html.HiddenFor(m => m.PageSize)
            <div class="col-lg-4">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control mr-1", autocomplete = "off", placeholder = $"{Labels.Company} {Labels.Or.ToLowerInvariant()} {Labels.ProductName.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-3">
                <label>@Labels.Vertical:</label>
                @Html.DropDownListFor(m => m.InnovationOrganizationTrackOptionGroupUid, new SelectList(Model.InnovationOrganizationTrackOptionGroups, "Uid", "Name", Model.InnovationOrganizationTrackOptionGroupUid), $"{string.Format(Labels.SelectAFEntity, Labels.Vertical.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
            <div class="col-lg-3">
                <label>@Labels.Status:</label>
                @Html.DropDownListFor(m => m.EvaluationStatusUid, new SelectList(Model.ProjectEvaluationStatuses, "Uid", "Name", Model.EvaluationStatusUid), $"{string.Format(Labels.SelectAMEntity, Labels.Status.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <div class="kt-checkbox-list">
                        <label class="kt-checkbox mt-2">
                            @Html.CheckBoxFor(m => m.ShowBusinessRounds, new { @class = "enable-datatable-reload" }) @Labels.ShowBusinessRounds
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="innovationprojects-list-table">
            <thead>
                <tr>
                    <th class="col-md-3">@Labels.Company</th>
                    <th class="col-md-3">@Labels.Project</th>
                    <th class="col-md-2">@Labels.VerticalsAndCreativeEconomyThemes</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Evaluation</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.CreateDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.UpdateDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->
