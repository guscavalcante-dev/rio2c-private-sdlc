@model PlataformaRio2C.Application.CQRS.Commands.UpdateCollaboratorSocialNetworks
<div class="modal fade" id="UpdateSocialNetworksModal" role="dialog" aria-labelledby="UpdateSocialNetworksModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    @(Labels.Update + " " + Labels.SocialNetworks)
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UpdateSocialNetworks", "Commissions", new { Area = "" }, FormMethod.Post, new { id = "UpdateSocialNetworksForm" }))
                {
                    @Html.HiddenFor(m => m.CollaboratorUid)
                    <div id="form-container">
                        @Html.Partial("/Views/Shared/Collaborators/Forms/_SocialNetworksForm.cshtml", Model)
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">@Labels.Cancel</button>
                <button type="button" class="btn btn-primary" onclick="$('#UpdateSocialNetworksForm').submit();">@Labels.Save</button>
            </div>
        </div>
    </div>
</div>