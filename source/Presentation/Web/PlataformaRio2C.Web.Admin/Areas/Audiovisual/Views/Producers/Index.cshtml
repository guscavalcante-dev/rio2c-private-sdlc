@model ProducerSearchViewModel
@{
    ViewBag.Title = Labels.Producers;
}
<!--begin:: Quick Stats-->
<div class="row">
    <div class="col-sm-6">
        <!--begin:: Total Count Widget-->
        <div id="ProducersTotalCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Total Count Widget-->
    </div>
    <div class="col-sm-6">
        <!--begin:: Edition Count-->
        <div id="ProducersEditionCountWidget" class="kt-portlet kt-portlet--fit kt-portlet--head-noborder" style="min-height: 230px;"></div>
        <!--end:: Edition Count-->
    </div>
</div>
<!--end:: Quick Stats-->
@Html.Partial("Widgets/DataTablewidget", Model)
@section Styles {
    @Styles.Render("~/bundles/css/dataTables.css")
    @Styles.Render("~/bundles/css/select2.css")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/dataTables.js")
    @Scripts.Render("~/bundles/js/chart.js")
    @Scripts.Render("~/bundles/js/select2.js")
    @Scripts.Render("~/bundles/js/bootbox.js")
    @Scripts.Render("~/bundles/js/audiovisual.producers.list.js")
    @Scripts.Render("~/bundles/js/audiovisual.producers.editioncount.js")
    @*@Scripts.Render("~/bundles/js/organizations.delete.js")*@
    @*@Scripts.Render("~/bundles/js/addresses.form.js")*@
    <script>
            // Page translations ----------------------------------------------------------------------
            var addToEdition = '@string.Format(Labels.AddToEdition, ViewBag.EditionDto.UrlCode)';
            var removeFromEdition = '@string.Format(Labels.RemoveFromEdition, ViewBag.EditionDto.UrlCode)';
            var virtual = '@Labels.Virtual';
            var presential = '@Labels.Presential';

            // Pagination -----------------------------------------------------------------------------
            var initialPage = @(Model.Page?.ToString() ?? "null");
            var initialPageSize = @(Model.PageSize?.ToString() ?? "null");

            jQuery(document).ready(function () {
                AudiovisualProducersTotalCountWidget.init();
                AudiovisualProducersEditionCountWidget.init();
                AudiovisualProducersDataTableWidget.init();
            });
    </script>
}