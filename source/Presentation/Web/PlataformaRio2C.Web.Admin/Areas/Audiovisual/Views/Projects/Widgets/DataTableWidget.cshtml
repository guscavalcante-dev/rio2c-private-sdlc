@model AudiovisualProjectSearchViewModel
<!--begin:: DataTable Widget-->
<div id="AudiovisualProjectDataTableWidget" class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @Labels.Projects
            </h3>
        </div>
        <div class="kt-portlet__head-label">
            <div class="dropdown">
                <button class="btn btn-brand btn-elevate btn-icon-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span>@Labels.ExportToExcel</span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a href="javascript:;" class="dropdown-item" onclick="AudiovisualProjectsDataTableWidget.exportEvaluatorsReportToExcel()">
                        <span class="kt-nav__link-text">@Labels.EvaluationsByEvaluatorReport</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <!--begin: SearchForm-->
        <div class="form-group row">
            <div class="col-lg-3 col-md-4 col-12">
                <label>@Labels.Search:</label>
                @Html.TextBoxFor(m => m.Search, new { type = "search", @class = "form-control", autocomplete = "off", placeholder = $"{Labels.Title} {Labels.Or.ToLowerInvariant()} {Labels.Producer.ToLowerInvariant()}" })
            </div>
            <div class="col-lg-3 col-md-4 col-12">
                <label>@Labels.Genre:</label>
                @Html.DropDownListFor(m => m.InterestUid, new SelectList(Model.Interests, "Uid", "Name", Model.InterestUid), $"{string.Format(Labels.SelectAMEntity, Labels.Genre.ToLowerInvariant())}...", new { @class = "form-control enable-datatable-reload enable-select2" })
            </div>
            <div class="col-lg-3 col-md-4 col-12">
                <label>@Labels.Status:</label>
                @Html.DropDownListFor(m => m.EvaluationStatusUid, new SelectList(Model.EvaluationStatuses, "Uid", "Name", Model.EvaluationStatusUid), $"{string.Format(Labels.SelectAMEntity, Labels.Status.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
            <div class="col-lg-3 col-md-4 col-12">
                <label>@Labels.ProjectModality:</label>
                @Html.DropDownListFor(m => m.ProjectModalityUid, new SelectList(Model.ProjectModalities, "Uid", "Name", Model.ProjectModalityUid), $"{string.Format(Labels.SelectAnFEntity, Labels.ProjectModality.ToLowerInvariant())}...", new { @class = "form-control enable-select2" })
            </div>
        </div>
        <!--end: SearchForm-->
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="audiovisualprojects-list-table">
            <thead>
                <tr>
                    <th class="col-md-3">@Labels.Title</th>
                    <th class="col-md-3">@Labels.Producer</th>
                    <th class="col-md-2">@Labels.Genre</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Evaluation</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.CreateDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.SendDate</th>
                    <th class="dt-head-center dt-body-center col-md-1">@Labels.Actions</th>
                </tr>
            </thead>
        </table>
        <!--end: Datatable -->
    </div>
</div>
<!--end:: DataTable Widget-->
