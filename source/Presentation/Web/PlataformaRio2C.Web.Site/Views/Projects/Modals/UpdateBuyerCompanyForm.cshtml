@using PlataformaRio2C.Domain.Dtos
@model PlataformaRio2C.Application.CQRS.Commands.UpdateProjectBuyerCompanies
@{
    var editionDto = ViewBag.EditionDto as EditionDto;
}
<div class="row">
    <div class="col-md-5" style="border-right: 0.07rem dashed #ebedf2;">
        <div class="row">
            <div class="col-12">
                <h5>@Labels.PlayersToEvaluation</h5>
            </div>
        </div>
        <div class="row">
            <div id="ProjectBuyerCompanySelectedWidget" style="min-height: 400px; width: 100%"></div>
        </div>
    </div>
    <div class="col-md-7">
        <ul class="nav nav-tabs nav-fill" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#kt_tabs_1_1">@Labels.PlayersSuggested</a>
