            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#kt_tabs_1_2">@Labels.AllPlayers</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="kt_tabs_1_1" role="tabpanel">
                <div class="row">
                    <div class="col-12 text-center mb-2"><small>@Labels.SeekProjectsOfThisGenre</small></div>
                </div>
                <div class="row">
                    <div id="ProjectMatchBuyerCompanyWidget" style="min-height: 400px; width: 100%"></div>
                </div>
            </div>
            <div class="tab-pane" id="kt_tabs_1_2" role="tabpanel">
