@using PlataformaRio2C.Domain.Entities
@{
    ViewBag.Title = Labels.OneToOneMeetings + " | " + Labels.ScheduledNegotiations;
}
@Html.Hidden("CollaboratorTypeUid", ViewBag.CollaboratorTypeUid as Guid?)
<!--end:: Quick Stats-->
<div class="row">
    <!--begin:: Scheduled Meetings Widget-->
    @Html.Partial("Widgets/ScheduledWidget")
    <!--end:: Scheduled Meetings Widget-->
</div>
@section Styles {
    @Styles.Render("~/bundles/css/select2.css")
    @Styles.Render("~/bundles/css/bootstrap-datepicker.css")
}
@section Scripts {
    @Scripts.Render("~/bundles/js/inputmask.js")
    @Scripts.Render("~/bundles/js/select2.js")
    @Scripts.Render("~/bundles/js/bootbox.js")
    @Scripts.Render("~/bundles/js/bootstrap-datepicker.js")
    @Scripts.Render("~/bundles/js/music.meetings.list.widget.js")
<script>
        // Page translations ----------------------------------------------------------------------
        var translations = {
            playerDropdownPlaceholder: '@string.Format(Labels.SelectAMEntity, Labels.Player.ToLowerInvariant())...',
            projectDropdownPlaceholder: '@string.Format(Labels.SelectAMEntity, Labels.Project.ToLowerInvariant())...',
            producerDropdownPlaceholder: '@string.Format(Labels.SelectAMEntity, Labels.Participant.ToLowerInvariant())...',
            dateDropdownPlaceholder: '@string.Format(Labels.SelectAFEntity, Labels.Date.ToLowerInvariant())...',
            startTimeDropdownPlaceholder: '@Html.Raw(string.Format(Labels.SelectAFEntity, Labels.StartTime.ToLowerInvariant()))...'
        };

        var isPlayerExecutive = $('#CollaboratorTypeUid').val() == '@(CollaboratorType.PlayerExecutiveMusic.Uid)';
        var isProducerExecutive = $('#CollaboratorTypeUid').val() == '@(CollaboratorType.Industry.Uid)';

        // Pagination -----------------------------------------------------------------------------
        jQuery(document).ready(function () {
            MusicMeetingsScheduledWidget.init();
        });
</script>
}