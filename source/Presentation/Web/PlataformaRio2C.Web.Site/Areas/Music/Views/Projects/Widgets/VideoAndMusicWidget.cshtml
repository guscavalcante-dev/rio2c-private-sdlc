@using PlataformaRio2C.Domain.Dtos
@using Constants = PlataformaRio2C.Domain.Constants;
@model MusicProjectDto
@{
    var editionDto = ViewBag.EditionDto as EditionDto;
    var userAccessControlDto = ViewBag.UserAccessControlDto as UserAccessControlDto;
    var isMusicCommission = userAccessControlDto?.HasCollaboratorType(Constants.CollaboratorType.CommissionMusic) == true;
}
<div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">@Labels.VideoClipAndMusics</h3>
    </div>
    @*@if (isCollaborator && isProjectSubmissionOpen && !isProjectFinished)
        {
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-actions">
                    <button type="button" class="btn btn-clean btn-sm btn-icon btn-icon-md btn-circle" onclick="ProjectsLinksWidget.showUpdateModal();">
                        <i class="flaticon2-edit"></i>
                    </button>
                </div>
            </div>
        }*@
</div>
<div class="kt-portlet__body">
    <div class="kt-widget">
        <div class="kt-widget__bottom">
            <div class="row">
                <div class="col-md-12">
                    <div class="kt-widget4">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.VideoClip</h3>
                        @if (!string.IsNullOrEmpty(Model.MusicProject?.VideoUrl))
                        {
                            if (Model.MusicProject?.VideoUrl?.IsYoutubeVideo() == true || Model.MusicProject?.VideoUrl?.IsVimeoVideo() == true)
                            {
                                <div class="row mt-3 justify-content-center">
                                    <div class="col-sm-8 col-md-8 col-lg-6">
                                        <div class="embed-responsive embed-responsive-16by9 d-flex">
                                            @Html.Raw(Model.MusicProject.VideoUrl.ConvertVideoToEmbed())
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <span><a href="@Model.MusicProject.VideoUrl" target="_blank"><small class="text-break">@Model.MusicProject.VideoUrl</small></a></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-12 text-center">
                                    <span class="text-center">@string.Format(Messages.EntityNotAction, @Labels.VideoClip, Labels.FoundM)</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row mt-20">
                <div class="col-md-12">
                    <div class="kt-widget4">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.Music 1</h3>
                        @Html.Partial("Widgets/MusicItem", Model.MusicProject?.Music1Url, new ViewDataDictionary())
                    </div>
                </div>
            </div>
            <div class="row mt-20">
                <div class="col-md-12">
                    <div class="kt-widget4">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.Music 2</h3>
                        @Html.Partial("Widgets/MusicItem", Model.MusicProject?.Music2Url, new ViewDataDictionary())
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>