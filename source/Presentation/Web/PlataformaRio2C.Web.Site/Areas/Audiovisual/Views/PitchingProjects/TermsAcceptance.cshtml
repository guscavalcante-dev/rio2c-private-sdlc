@model PlataformaRio2C.Application.CQRS.Commands.OnboardProducerTermsAcceptance
@{
    ViewBag.Title = Labels.ProjectSubmission;
}
<div class="kt-portlet">
    <div class="kt-portlet__body kt-portlet__body--fit">
        <div class="row mb-3" style="padding-top:30px">
            <div class="col-md-12 text-center"><h3>@Messages.StepsToProjectSubscription</h3></div>
        </div>
        <div class="kt-grid kt-wizard-v3 kt-wizard-v3--white" data-ktwizard-state="between">
            <div class="kt-grid__item">
                <!--begin: Form Wizard Nav -->
                @Html.Partial("Shared/_ProjectsOnboardingMenu", 2)
                <!--end: Form Wizard Nav -->
            </div>
            <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v3__wrapper">
                <!--begin: Form Wizard Form-->
                @using (Html.BeginForm("TermsAcceptance", "PitchingProjects", FormMethod.Post, new { id = "PlayerTermsAcceptanceForm", @class = "kt-form" }))
                {
                    @Html.HiddenFor(m => m.ProjectUid)
                    <!--begin: Form Wizard Step 2-->
                    <div class="kt-wizard-v3__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
                        <div class="kt-heading kt-heading--md">@Labels.ParticipantsTerms</div>
                        <div class="kt-form__section kt-form__section--first">
                            <div class="kt-wizard-v3__form">
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <div class="kt-portlet">
                                            <div class="kt-portlet__body">
                                                <div class="rio2c-scroll" data-height="400" data-scrollbar-shown="true">
                                                    @Html.Partial("Shared/_ProducerTermsAcceptanceText")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <label class="kt-checkbox">
                                            @Html.CheckBoxFor(m => m.AcceptTerms, new { @class = "" }) @Messages.AcceptTermsAndConditions
                                            <span></span>
                                        </label><br />
                                        @Html.ValidationMessageFor(m => m.AcceptTerms, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end: Form Wizard Step 2-->
                    <!--begin: Form Actions -->
                    <div class="kt-form__actions">
                        <button type="button" class="btn btn-brand btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u ml-auto" onclick="MyRio2cCommon.submitForm('#PlayerTermsAcceptanceForm');">
                            @Labels.NextStep
                        </button>
                    </div>
                    <!--end: Form Actions -->
                }
                <!--end: Form Wizard Form-->
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/bundles/css/onboarding.projects.css")
}
@section Scripts {
}