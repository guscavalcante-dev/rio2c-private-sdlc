@using PlataformaRio2C.Domain.Dtos
@using PlataformaRio2c.Infra.Data.FileRepository.Helpers
@using PlataformaRio2C.Domain.Statics
@model AttendeeCreatorProjectDto
@{
    var articleFileUrl = $"https://subscription.rio2c.com.br/api/src/storage/uploads/creator/pitching/forms/{Model.CreatorProjectDto.Uid.ToString().ToUpper()}_Argument.{Model.CreatorProjectDto.ArticleFileExtension}"; //FileHelper.GetFileUrl(FileRepositoryPathType.CreatorProjecFile, Model.Uid, Model.CreatorProjectDto.ArticleFileUploadDate, Model.CreatorProjectDto.ArticleFileExtension);
    var clippingFileUrl = $"https://subscription.rio2c.com.br/api/src/storage/uploads/creator/pitching/forms/{Model.CreatorProjectDto.Uid.ToString().ToUpper()}_Clipping.{Model.CreatorProjectDto.ClippingFileExtension}";//FileHelper.GetFileUrl(FileRepositoryPathType.CreatorProjecFile, Model.Uid, Model.CreatorProjectDto.ClippingFileUploadDate, Model.CreatorProjectDto.ClippingFileExtension);
    var otherFileUrl = $"https://subscription.rio2c.com.br/api/src/storage/uploads/creator/pitching/forms/{Model.CreatorProjectDto.Uid.ToString().ToUpper()}_Other.{Model.CreatorProjectDto.OtherFileExtension}";//FileHelper.GetFileUrl(FileRepositoryPathType.CreatorProjecFile, Model.Uid, Model.CreatorProjectDto.OtherFileUploadDate, Model.CreatorProjectDto.OtherFileExtension);
}

<div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">@Labels.Attachments</h3>
    </div>
</div>
<div class="kt-portlet__body">
    <div class="kt-widget">
        <div class="kt-widget__bottom">
            <div class="row">
                <div class="col-md-12">
                    <div class="kt-widget4">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.TreatmentShortOrArticle</h3>
                        @if (Model.CreatorProjectDto.ArticleFileUploadDate.HasValue)
                        {
                            <div class="row mt-3 justify-content-center">
                                <div class="col-sm-8 col-md-8 col-lg-6">
                                    <div class="embed-responsive embed-responsive-16by9 d-flex">
                                        @Html.Raw(articleFileUrl.ConvertFileToEmbed())
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <span><a href="@articleFileUrl" target="_blank"><small class="text-break">@articleFileUrl</small></a></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-12 text-center">
                                    <span class="text-center">@string.Format(Messages.EntityNotAction, Labels.TreatmentShortOrArticle, Labels.FoundM)</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="kt-widget4 mt-3">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.Clipping</h3>
                        @if (Model.CreatorProjectDto.ClippingFileUploadDate.HasValue)
                        {
                            <div class="row mt-3 justify-content-center">
                                <div class="col-sm-8 col-md-8 col-lg-6">
                                    <div class="embed-responsive embed-responsive-16by9 d-flex">
                                        @Html.Raw(clippingFileUrl.ConvertFileToEmbed())
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <span><a href="@clippingFileUrl" target="_blank"><small class="text-break">@clippingFileUrl</small></a></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-12 text-center">
                                    <span class="text-center">@string.Format(Messages.EntityNotAction, Labels.Clipping, Labels.FoundM)</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="kt-widget4 mt-3">
                        <h3 class="kt-heading kt-heading--sm mb-0 mt-0 text-center">@Labels.OtherAttachedFiles</h3>
                        @if (Model.CreatorProjectDto.OtherFileUploadDate.HasValue)
                        {
                            <div class="row mt-3 justify-content-center">
                                <div class="col-sm-8 col-md-8 col-lg-6">
                                    <div class="embed-responsive embed-responsive-16by9 d-flex">
                                        @Html.Raw(otherFileUrl.ConvertFileToEmbed())
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <span><small class="text-break">@(!string.IsNullOrEmpty(Model.CreatorProjectDto.OtherFileDescription) ? Model.CreatorProjectDto.OtherFileDescription : "-")</small></span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <span><a href="@otherFileUrl" target="_blank"><small class="text-break">@otherFileUrl</small></a></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-12 text-center">
                                    <span class="text-center">@string.Format(Messages.EntityNotAction, Labels.OtherAttachedFiles, Labels.FoundM)</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>